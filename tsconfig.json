{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJS": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./typings/index.d.ts",
    "./src/components/*",
    "./example/*"
  ],
  "exclude": [
    "node_modules",
    "./dist/*"
  ]
}
